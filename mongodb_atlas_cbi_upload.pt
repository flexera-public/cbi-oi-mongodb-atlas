define create_bill_upload($rs_optima_host, $rs_org_id, $bill_connect_id, $period) return $id do
  $url = 'https://' + $rs_optima_host + '/optima/orgs/' + $rs_org_id + '/billUploads'
  $response = http_post(
    auth: $$creds_flexera,
    url: $url,
    body: {
      billConnectId: $bill_connect_id,
      billingPeriod: $period
    }
  )
  call check_response($url, $response, 'create bill upload for ' + $period)
  $id = $response['body']['id']
end

define upload_file_to_bill_upload($rs_optima_host, $rs_org_id, $bill_upload_id, $file_id, $csv)
  $url = 'https://' + $rs_optima_host + '/optima/orgs/' + $rs_org_id + '/billUploads/files/' + $file_id
  $response = http_post(
    auth: $$creds_flexera,
    url: $url,
    body: $csv
  )
  call check_response($url, $response, 'upload file to bill upload')
end

define check_response($url, $response, $request_description) do
  if $response['code'] > 299 || $response['code'] < 200
    raise 'Unexpected status code from ' + $request_description + ' (' + $url + ') request: ' + $response['code'] + ' body: ' + to_s($response['body'])
  end
end
